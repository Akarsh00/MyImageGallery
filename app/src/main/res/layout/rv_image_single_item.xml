<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="java.util.List" />

        <variable
            name="mainViewModel"
            type="com.example.myimagegallery.presentation.MainViewModel" />


        <variable
            name="currentList"
            type="List&lt;com.example.myimagegallery.data.model.Image>" />

        <variable
            name="image"
            type="com.example.myimagegallery.data.model.Image" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/cardview_light_background"
            android:onClick="@{()->mainViewModel.imageListItemClick(currentList,image.id)}"
            android:scaleType="centerCrop"
            app:imageURL="@{image.imageUri}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>